<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 <class name="org.sdl.salestax.domain.Order" table="ORDERS">
    <id name="id" type="long">
        <column name="ID" not-null="true"/>
     <generator class="native" />
   </id>
   <property name="salesTax" type="big_decimal" >
       <column name="SALES_TAX" not-null="true"/>
   </property>
   <property name="total" type="big_decimal" >
       <column name="SALES_TOTAL" not-null="true"/>
   </property>
   
   <list name="items" table="ORDER_ITEMS" cascade="all">
        <key column="ORDER_ID"/>
        <index column="SEQUENCE_ID" />
        <many-to-many column="ITEM_ID" class="org.sdl.salestax.domain.Item"/>
   </list> 
 </class>
</hibernate-mapping>