<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 <class name="org.sdl.salesdemo.domain.Item" table="ITEM">
    <id name="id" type="long">
        <column name="ID" not-null="true"/>
     <generator class="native" />
   </id>
   <property name="quantity" type="integer" >
       <column name="QUANTITY" not-null="true"/>
   </property>
   <property name="lineTotal" type="big_decimal" >
       <column name="TOTAL" not-null="true"/>
   </property>
   <property name="taxes" type="big_decimal" >
       <column name="TAXES" not-null="true"/>
   </property>
   
   <many-to-one name="product" column="PRODUCT_ID" class="org.sdl.salesdemo.domain.Product" />

 </class>
</hibernate-mapping>